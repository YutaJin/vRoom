<div class='row form'>

<div class='col-lg-12'>
  <div class='content'>
  <%= form_for(@group) do |f| %>
  <h2>Groupを作る</h2>
  <div class="form-group file">
        <%=  f.label :image, :Image%>
        <%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
   <div class='form-group'>
    <div class='col-lg-12'>
        <%= f.label :key,:GroupName %>
       <%= f.text_field :key, placeholder: 'Group Name', class: 'form-control' %>
    </div>
    <div class='col-lg-12'>
       <%= f.label :detail, :detail %>
       <%= f.text_area :detail, placeholder: 'detail', class: 'form-control' %>
     </div>
   </div>
   <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
  <% end %>
</div>
</div>
</div>
