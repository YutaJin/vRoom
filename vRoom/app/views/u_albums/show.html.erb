<div class='main-contents'>
  <div class='col-sm-12'>
  <div class='group-post'>
    <%= render partial: "albummenu" %>

<% @uposts.each do |post| %>
        <div class='post'>


          <div class='user-info'>

             <div class="image"  style="background-image: url(<%= rails_blob_path(post.user.image) %>) "></div>
            <p><%= post.user.nickname %></p>
          </div>


          <div class='more-content'>
          <div class="post-image" style="background-image: url(<%= rails_blob_path(post.image) %>)">
            <div class='post-sentence'>
              <%= post.text %>
          </div>

          <% if post.user_id == current_user.id %>
           <div class='post-menu'>
             <div class="dropdown">
              <li class='dropdown'>
                <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-expanded='false'><span class='caret'></span></a>
                 <ul class='dropdown-menu' role='menu'>
                    <li class='presentation'>
                     <%= link_to '編集', edit_user_u_album_upost_path(@user, @u_album, post) %>
                  </li>
                  <li class='presentation'>
                    <%= link_to '削除', "/users/#{post.user_id}/u_album/#{post.u_album_id}/uposts/#{post.id}", method: :delete %>
                  </li>
                   <li class='presentation'>

                  </li>
                </ul>
              </li>
            </div>
          </div>
          <% end %>
        </div>
     </div>
    </div>
    <% end %>



</div>
</div>
</div>
