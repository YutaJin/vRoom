<div class='row form'>


<div class="col-lg-12">
  <div class='content'>
<%= form_for current_user do |f| %>


  <h1>profile</h1>
  <div class="form-group file">
        <%=  f.label :image, :Image%>
        <%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
  <div class='form-group'>
    <div class='col-lg-12'>
        <%= f.label :nickname,:Name %>
       <%= f.text_field :nickname, placeholder: 'name', class: 'form-control' %>
    </div>
    <div class='col-lg-12'>
       <%= f.label :text, :introduction %>
       <%= f.text_area :text, placeholder: 'introduction', class: 'form-control' %>
     </div>
   </div>
   <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
<% end %>
</div>
</div>

</div>
